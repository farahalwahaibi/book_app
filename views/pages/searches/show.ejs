<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="styles/reset.css">
    <link rel="stylesheet" href="styles/base.css">
</head>
<body>
    <header class="header">
        <h1>Best Books</h1>
    </header>
    <main>
        <div class="href">
            <a href="/">HOME</a>
            <a href="./searches/new">SEARCH</a>
        </div>
    <section class="result">
        <% booksData.forEach((books)=>{ %> 
            <img src="<%= books.image_url %>" alt="https://i.imgur.com/J5LVHEL.jpg">
            <h2> <%= books.title %> </h2>
            <h3> <%= books.authors %> </h3>
            <h4> <%= books.description %> </h4>
            <form action="/books" method="POST" >
                <input type="hidden" value="<%= books.image_url %>" name="image_url">
                <input type="hidden" value="<%= books.title %>" name="title" > 
                <input type="hidden" value="<%= books.authors %>" name="author">  
                <input type="hidden" value="<%= books.description %>" name="description">
                <br>  
                <button type="submit">Select This Book</button>
        </form>
        <% }) %> 
    </section>
</main>
<footer>
    <div class="footer">
        <a href=""><img src="/img/fb-icon.png" alt=""></a>
            <a href=""><img src="/img/twit-icon.png" alt=""></a>
            <a href=""><img src="/img/insta-icon.png" alt=""></a>
            <a href=""><img src="/img/mail-icon.png" alt=""></a>
    </div>
</footer>
</body>
</html>